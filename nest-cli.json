{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ev-dealer-api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ev-dealer-api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ev-dealer-api-gateway",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "customer-service": {
      "type": "application",
      "root": "apps/customer-service",
      "entryFile": "main",
      "sourceRoot": "apps/customer-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/customer-service/tsconfig.app.json"
      }
    },
    "deale-coordination": {
      "type": "application",
      "root": "apps/deale-coordination",
      "entryFile": "main",
      "sourceRoot": "apps/deale-coordination/src",
      "compilerOptions": {
        "tsConfigPath": "apps/deale-coordination/tsconfig.app.json"
      }
    },
    "ev-dealer-api-gateway": {
      "type": "application",
      "root": "apps/ev-dealer-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/ev-dealer-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ev-dealer-api-gateway/tsconfig.app.json"
      }
    },
    "sales": {
      "type": "application",
      "root": "apps/sales",
      "entryFile": "main",
      "sourceRoot": "apps/sales/src",
      "compilerOptions": {
        "tsConfigPath": "apps/sales/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    }
  }
}